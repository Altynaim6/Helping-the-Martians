import java.util.Scanner;
import java.util.Random;
import java.util.Arrays;
public class Main
{
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Random random = new Random();
	        int A = random.nextInt();
	        int B = random.nextInt();
	        int C = random.nextInt();
	        int[] boxLocations = new int[]{A, B, C};
	   
	    	int randomKilometr = 0;
		    
		    for(int i = 0; i < boxLocations.length; i++) {
		        randomKilometr = random.nextInt(7) + i;
		        if (randomKilometr > 0) {
		        boxLocations[i] = randomKilometr;
		        }
		    }
		
		    for (int i = 0; i < boxLocations.length; i++) {
		        System.out.print(boxLocations[i] + " ");
		    }
		
		    indicatKilometer(A, B, C, boxLocations, scanner);
	}
	
	public static void indicatKilometer(int A, int B, int C, int[] boxLocations, Scanner scanner) {
	     int maxAttempts = 5;
	    
	     while (maxAttempts > 0) {
	         int attempts = maxAttempts;
	         
	         while (attempts > 0) {
	             System.out.println("\nEnter your guesses:");
	             
	         int checkA = scanner.nextInt();
	         int checkB = scanner.nextInt();
	         int checkC = scanner.nextInt();
	         int[] guessLocations = new int[]{checkA, checkB, checkC};

	    
	    int correctGuesses = 0;

        for (int i = 0; i < boxLocations.length; i++) {
            if (boxLocations[i] == guessLocations[i]) {
                correctGuesses++;
            }
        }

        if (correctGuesses == 3) {
            System.out.println("Congratulations, all boxes were found!");
            attempts = 0;
            break;
            }
            else {
                System.out.println("Number of correctly guessed kilometer marks: " + correctGuesses);
                }
        attempts--;
	    }
	    if (attempts == 0) {
            System.out.println("Sorry, you've run out of attempts. The boxes have moved.");
            System.out.println("Restarting the process...");
            
	    }
        
	    }
    }
}

	
